{
	"name": "obsidian-textlint-highlighter-plugin",
	"version": "1.0.0",
	"description": "Obsidian plugin that provides real-time text linting with textlint and highlights issues in the editor",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@codemirror/state": "^6.4.1",
		"@codemirror/view": "^6.26.3",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	  "dependencies": {
    "@textlint/kernel": "^15.2.0",
    "@textlint/textlint-plugin-markdown": "^15.2.0",
    "@textlint-ja/textlint-rule-no-dropping-i": "^3.0.0",
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": "^2.0.1",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.2.0",
    "kuromoji": "^0.1.2",

    "textlint-rule-no-doubled-joshi": "^5.1.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "textlint-rule-preset-jtf-style": "^3.0.2",
    "textlint-rule-prefer-tari-tari": "^1.0.3"
  }
